<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.raider.book">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".app.BookApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/RaiderBook">
        <activity
            android:name=".app.SplashActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".home.MainActivity"
            android:theme="@style/RaiderBook.Drawer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".importing.sd.SDImportActivity"
            android:parentActivityName=".home.MainActivity"
            android:theme="@style/RaiderBook.Import"/>
        <activity android:name=".read.ReadActivity"/>
        <activity
            android:name=".online.OnlineActivity"
            android:parentActivityName=".home.MainActivity">
        </activity>
        <activity android:name=".VPActivity">
        </activity>
    </application>

</manifest>