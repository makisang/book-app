<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RaiderBook" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="RaiderBook.Drawer">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- activity transition -->
        <item name="android:windowEnterTransition">@transition/main_enter</item>
        <item name="android:windowExitTransition">@transition/main_exit</item>
    </style>

    <style name="RaiderBook.Import">
        <!-- activity transition -->
        <item name="android:windowEnterTransition">@transition/import_enter</item>
        <item name="android:windowExitTransition">@transition/import_exit</item>
    </style>

</resources>